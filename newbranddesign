}


/* ==========================================
   5. TEXT CONTENT (Gerade rücken & Breite)
========================================== */

.content-inner {
    /* Breite des Textes begrenzen (ca. 65% Screen Width) */
    /* Da wir im 70% Container sind, entspricht 93% ca. 65vw */
    width: 93%; 
    max-width: 1000px;
    margin: 0 auto;
    
    /* WICHTIG: Text zurück-neigen, damit er gerade steht */
    transform: skewY(calc(var(--skew-angle) * -1));
    
    text-align: left;
    box-sizing: border-box;
}

/* Textfarben in grüner Box anpassen */
.bg-green .content-inner h1,
