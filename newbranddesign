    /* Platz lassen für den Überlapp */
    padding-bottom: 10vw; 
}


/* ==========================================
   3. MAIN CONTAINER (Die 70% Säule)
========================================== */

.main-column {
    position: relative;
    z-index: 10;
    
    /* Zentrierung und Breite (70% Desktop) */
    width: var(--container-width-desktop);
    margin: 0 auto;
    
    /* Überlappung mit dem Header */
    margin-top: -12vw;
    margin-bottom: 50px;
    
    /* DIE MAGIE: Wir neigen die ganze Säule vertikal (Y-Achse) */
    /* Dadurch bleiben die Seiten gerade, aber oben/unten/Trennlinien werden schräg */
    transform: skewY(var(--skew-angle));
    
    /* Der gewünschte seitliche Schatten (Weichgezeichnet) */
    box-shadow: 0 0 50px rgba(0, 0, 0, 0.15);
    
    /* Hintergrund weiß als Basis */
    background-color: rgb(255, 255, 255);
}


/* ==========================================
   4. SECTIONS (Die 5 Farb-Container)
========================================== */

.skew-section {
